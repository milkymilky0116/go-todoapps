package components

import "github.com/milkymilky0116/go-todoapps/internal/db"

type CardProps struct {
	Todo db.Todo
}

templ Card(props CardProps) {
	<div class="w-1/2 h-14 bg-red-50 border-solid border-1 border-white p-3 flex justify-center items-center">
		if props.Todo.IsComplete {
			<del>
				<p>{ props.Todo.Context }</p>
			</del>
		} else {
			<p>{ props.Todo.Context }</p>
		}
	</div>
}
